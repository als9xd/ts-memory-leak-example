{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "strict": true,
    "target": "es2018"
  },
  "include": ["src"],
  "exclude": ["src/*.test.ts"]
}